# Database
DATABASE_URL="postgresql://user:password@localhost:5432/daily_digest?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Google OAuth (untuk login & Gmail API)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Twitter API
TWITTER_API_KEY="your-secret-key"
TWITTER_API_BASE_URL="https://api.twitterapi.io"

# OpenAI
OPENAI_API_KEY="your-secret-key"

# Cron Job Security
CRON_SECRET="your-random-secret-for-cron-jobs"

# LangSmith Configuration (Optional - for LLM monitoring & debugging)
