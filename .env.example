# Database - Get this from Vercel Postgres (powered by Neon)
# Run: vercel postgres create
# Then: vercel env pull .env.local
DATABASE_URL="postgresql://user:password@host.region.aws.neon.tech/dbname?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-command: openssl rand -base64 32"

# Google OAuth (for authentication & Gmail API)
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"

# Twitter API (shared key - already configured)
TWITTER_API_KEY="your-twitter-api-key"
TWITTER_API_BASE_URL="https://api.twitterapi.io"

# OpenAI API
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# Cron Job Security
CRON_SECRET="generate-with-command: openssl rand -base64 32"

# LangSmith (Optional - for AI monitoring & debugging)
# Get from: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY="lsv2_pt_your_langsmith_api_key"
LANGCHAIN_PROJECT="daily-digest-prod"
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
